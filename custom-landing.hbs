{{!--
This template is used for the post page.
--}}

{{!-- This block preloads specific assets for the post page --}}
{{#contentFor "preload"}}
<link rel="preload" href="{{asset " css/post.css"}}" as="style" />
<link rel="preload" href="{{asset " js/post.js"}}" as="script" />
{{/contentFor}}

{{!-- This block loads specific styles for the post page --}}
{{#contentFor "styles"}}
<link rel="stylesheet" type="text/css" href="{{asset " css/post.css"}}" media="screen" />
<link rel="stylesheet" type="text/css" href="{{asset " css/bootstrap.min.css"}}" media="screen" />
<link rel="stylesheet" type="text/css" href="{{asset " css/aos.css"}}" media="screen" />
<link rel="stylesheet" type="text/css" href="{{asset " css/templatemo-nomad-force.css"}}" media="screen" />
{{/contentFor}}

{{!-- The tag below means: insert everything in this file
into the {body} of the default.hbs template --}}
<main>

  <section class="hero" id="hero">
    <div class="heroText">
      <h1 class="text-white mt-5 mb-lg-4" data-aos="zoom-in" data-aos-delay="800">
        اسبرسو بالعربي
      </h1>

      <p class="text-secondary-white-color" data-aos="fade-up" data-aos-delay="1000">
        تعلم كيف تصنع قهوة <a href="/blog/latte-test/" <strong class="custom-underline">الإسبريسو</strong></a> كباريستا
        محترف في المنزل
      </p>

      <!-- <p class="text-secondary-white-color aos-init aos-animate" data-aos="fade-up" data-aos-delay="1000">
                        تعلم كيف تصنع قهوة <strong class="custom-underline">الإسبريسو</strong> كباريستا محترف في المنزل  
                    </p> -->
    </div>

    <div class="videoWrapper">
      <video autoplay="" loop="" muted="" class="custom-video" poster="assets/images/landing-photo.jpg">
        <source src="https://res.cloudinary.com/dsjn8yud5/video/upload/v1663794140/test-video/landing-video_jmnqcn.mp4"
          type="video/mp4">

        Your browser does not support the video tag.
      </video>
    </div>

    <div class="overlay"></div>
    <a href="/blog/" class="ca3-scroll-down-link ca3-scroll-down-arrow" data-ca3_iconfont="ETmodules"
      data-ca3_icon=""></a>
  </section>


</main>
    

